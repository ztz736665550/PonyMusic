<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_8dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/details_icon"
        android:layout_width="@dimen/layout_65dp"
        android:layout_height="@dimen/layout_65dp"
        android:src="@drawable/imageloading"/>
    <LinearLayout
        android:layout_width="@dimen/layout_0dp"
        android:layout_weight="9"
        android:layout_height="@dimen/layout_65dp"
        android:layout_marginLeft="@dimen/layout_8dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/details_name"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/layout_8dp"
            android:textColor="@color/colorzong"
            android:textSize="@dimen/textsize_16sp"
            android:layout_height="@dimen/layout_25dp"
            android:lines="1"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/details_title"
            android:lines="1"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:textColor="@color/colorzong"
            android:layout_height="@dimen/layout_25dp"
            android:layout_marginBottom="@dimen/layout_10dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/details_item_gengduo"
        android:layout_width="@dimen/layout_0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/item_gengduo"/>
</LinearLayout>
