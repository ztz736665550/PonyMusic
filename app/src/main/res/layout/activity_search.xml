<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".view.activity.SearchActivity">
    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_50dp"
        android:background="@color/colorRed"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/serach_fanhui"
            android:layout_width="@dimen/layout_50dp"
            android:layout_height="@dimen/layout_50dp"
            android:padding="@dimen/layout_13dp"
            android:src="@drawable/fanhui"/>


        <LinearLayout
            android:layout_marginTop="@dimen/layout_10dp"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="@dimen/layout_30dp"
            android:layout_weight="1"
            android:background="@color/colorhui"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/layout_15dp"
                android:layout_height="@dimen/layout_15dp"
                android:layout_marginLeft="@dimen/layout_5dp"
                android:src="@drawable/sousuo" />

            <EditText
                android:id="@+id/serach_edit_text_sousuo"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="@dimen/layout_50dp"
                android:layout_marginLeft="@dimen/layout_3dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:hint="请输入搜索的内容"
                android:textSize="@dimen/textsize_15sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/search_sousuo"
            android:layout_width="@dimen/layout_50dp"
            android:layout_height="@dimen/layout_50dp"
            android:padding="@dimen/layout_13dp"
            android:src="@drawable/sousuo" />

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/seachrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>