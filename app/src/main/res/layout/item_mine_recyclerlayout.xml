<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/mine_icon"
        android:layout_width="@dimen/layout_65dp"
        android:layout_height="@dimen/layout_65dp"
        android:src="@drawable/play_page_default_cover"
        android:layout_margin="@dimen/layout_3dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_65dp"
        android:layout_marginLeft="@dimen/layout_8dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/mine_name"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/layout_8dp"
            android:textColor="@color/colorzong"
            android:lines="1"
            android:singleLine="true"
            android:textSize="@dimen/textsize_16sp"
            android:layout_height="@dimen/layout_25dp" />
        <TextView
            android:id="@+id/mine_title"
            android:layout_width="match_parent"
            android:textColor="@color/colorzong"
            android:lines="1"
            android:singleLine="true"
            android:layout_height="@dimen/layout_25dp"
            android:layout_marginBottom="@dimen/layout_10dp"/>
    </LinearLayout>
</LinearLayout>
